        <!-- Bootstrap Core CSS -->
        <%# <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet"> %>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

        <!-- Theme CSS -->
